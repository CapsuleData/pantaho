<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

  <id>pme-ce</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>metadata-editor</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/resources-filtered</directory>
      <outputDirectory>.</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>**/*.sh</include>
        <include>**/*.command</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources-filtered</directory>
      <outputDirectory>.</outputDirectory>
      <filtered>true</filtered>
      <excludes>
        <exclude>**/*.sh</exclude>
        <exclude>**/*.command</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/launcher</directory>
      <outputDirectory>launcher</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/libs</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/plugins</directory>
      <outputDirectory>plugins</outputDirectory>
    </fileSet>
    <!-- Include pentaho-karaf-assembly-pme in system folder-->
    <fileSet>
      <directory>${project.build.directory}/karaf</directory>
      <outputDirectory>system/karaf</outputDirectory>
    </fileSet>
	<fileSet>
	  <directory>${project.build.directory}/oss-licenses</directory>
	  <outputDirectory>.</outputDirectory>
	</fileSet>
  </fileSets>
  <dependencySets>
    <!-- default driver kar set -->
    <dependencySet>
      <includes>
        <include>*:pentaho-hadoop-shims-cdh61-kar:*</include>
        <include>*:pentaho-hadoop-shims-hdp30-kar:*</include>
        <include>*:pentaho-hadoop-shims-emr521-kar:*</include>
        <include>*:pentaho-hadoop-shims-dataproc1421-kar:*</include>
      </includes>
      <outputDirectory>./drivers</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
</assembly>
